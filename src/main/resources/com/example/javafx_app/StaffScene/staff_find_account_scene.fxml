<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="rootPane" prefHeight="700.0" prefWidth="414.0" stylesheets="@../css_file/login_decor.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx_app.controller.Staff.StaffFindAccountController">
    <children>
        <Label alignment="CENTER" layoutX="53.0" layoutY="48.0" prefHeight="40.0" prefWidth="321.0" text="Tìm kiếm Tài khoản Khách hàng">
            <font>
                <Font size="20.0" />
            </font>
        </Label>

        <VBox layoutX="65.0" layoutY="136.0" prefHeight="250.0" prefWidth="283.0" spacing="10.0">
            <children>
                <Label text="Nhập Số tài khoản (Account ID)" />
                <TextField fx:id="accountIdField" promptText="Ví dụ: 12345678" />
                <Text fx:id="errorLog" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="283.0" />

                <Button fx:id="searchButton" alignment="CENTER" onAction="#TimKiem" prefHeight="30.0" prefWidth="120.0" text="Tìm kiếm">
                    <VBox.margin>
                        <Insets left="80.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>

        <VBox fx:id="resultVBox" layoutX="65.0" layoutY="380.0" prefHeight="250.0" prefWidth="283.0" styleClass="VBox" visible="false">
            <children>
                <Label styleClass="label_in_Vbox_black" text="Thông tin Tài khoản:" />

                <Label fx:id="nameLabel" styleClass="label_in_Vbox_black" text="Tên chủ khoản:" />
                <Label fx:id="citizenIdLabel" styleClass="label_in_Vbox_black" text="CCCD:" />
                <Label fx:id="typeLabel" styleClass="label_in_Vbox_black" text="Loại tài khoản:" />
                <Label fx:id="accountIdResultLabel" styleClass="label_in_Vbox_black" text="Số tài khoản:" />
                <Label fx:id="startDateLabel" styleClass="label_in_Vbox_black" text="Ngày mở tài khoản:" />
                <Label fx:id="phoneNumberLabel" styleClass="label_in_Vbox_black" text="Số điện thoại:" />
                <Label fx:id="emailLabel" styleClass="label_in_Vbox_black" text="Email:" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>

        <Button fx:id="returnButton" layoutX="166.0" layoutY="640.0" mnemonicParsing="false" onAction="#QuayLai" text="Quay lại" />
    </children>
</AnchorPane>
