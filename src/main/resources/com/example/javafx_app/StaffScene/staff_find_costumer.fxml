<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="rootPane" prefHeight="700.0" prefWidth="414.0" stylesheets="@../css_file/login_decor.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx_app.controller.Staff.StaffFindCustomerController">
    <children>
        <Label alignment="CENTER" layoutX="53.0" layoutY="48.0" prefHeight="40.0" prefWidth="321.0" text="Tìm kiếm Khách hàng" textFill="WHITE">
            <font>
                <Font size="20.0" />
            </font>
        </Label>

        <VBox layoutX="65.0" layoutY="136.0" prefHeight="150.0" prefWidth="283.0" spacing="10.0">
            <children>
                <Label text="Nhập Số CCCD" textFill="WHITE" />
                <TextField fx:id="searchField" promptText="Ví dụ: 012345678901" />
                <Text fx:id="errorLog" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="283.0" />

                <Button fx:id="searchButton" alignment="CENTER" onAction="#TimKiemKhachHang" prefHeight="30.0" prefWidth="120.0" text="Tìm kiếm">
                    <VBox.margin>
                        <Insets left="80.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>

        <VBox fx:id="resultVBox" layoutX="65.0" layoutY="280.0" prefHeight="300.0" prefWidth="283.0" styleClass="VBox" visible="false">
            <children>
                <Label styleClass="label_in_Vbox_black" text="Thông tin Khách hàng:" />

                <Label fx:id="nameLabel" styleClass="label_in_Vbox_black" text="Họ và Tên:" />
                <Label fx:id="cccdLabel" styleClass="label_in_Vbox_black" text="Số CCCD:" />
                <Label fx:id="DoBLabel" styleClass="label_in_Vbox_black" text="Ngày sinh:" />
                <Label fx:id="genderLabel" styleClass="label_in_Vbox_black" text="Giới tính:" />
                <Label fx:id="phoneLabel" styleClass="label_in_Vbox_black" text="Số điện thoại:" />
                <Label fx:id="emailLabel" styleClass="label_in_Vbox_black" text="Email:" />

            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>

        <Button fx:id="returnButton" layoutX="166.0" layoutY="640.0" mnemonicParsing="false" onAction="#QuayLai" text="Quay lại" />
    </children>
</AnchorPane>
