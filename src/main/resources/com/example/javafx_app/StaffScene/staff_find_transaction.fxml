<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane"
            prefHeight="700.0"
            prefWidth="414.0"
            stylesheets="@../css_file/login_decor.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.javafx_app.controller.Staff.StaffFindTransactionController">
    <children>
        <VBox spacing="15"
              AnchorPane.topAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20">

            <!-- Title -->
            <Label text="Search Transaction by Amount"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- Amount range -->
            <HBox spacing="10">
                <Label text="Min Amount:" />
                <TextField fx:id="minAmountField"
                           promptText="e.g. 100"/>

                <Label text="Max Amount:" />
                <TextField fx:id="maxAmountField"
                           promptText="e.g. 10000"/>
            </HBox>

            <!-- Search button -->
            <Button text="Search"
                    onAction="#handleSearch"/>

            <!-- Result table -->
            <TableView fx:id="transactionTable" prefHeight="300.0">

                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="dateColumn" text="Ngày" prefWidth="110"/>
                    <TableColumn fx:id="typeColumn" text="Loại" prefWidth="70"/>
                    <TableColumn fx:id="amountColumn" text="Số tiền" prefWidth="90"/>
                    <TableColumn fx:id="currencyColumn" text="Tiền tệ" prefWidth="80"/>
                    <TableColumn fx:id="fromAccountColumn" text="Từ TK" prefWidth="120"/>
                    <TableColumn fx:id="toAccountColumn" text="Đến TK" prefWidth="120"/>
                </columns>

            </TableView>



            <!-- Error / info -->
            <Label fx:id="messageLabel"
                   style="-fx-text-fill: red;" />
        </VBox>
    </children>
</AnchorPane>
