<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="rootPane"
            prefHeight="700.0"
            prefWidth="414.0"
            stylesheets="@../css_file/login_decor.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.javafx_app.controller.Staff.StaffFindTransactionController">

    <children>

        <!-- Title -->
        <Label alignment="CENTER"
               layoutX="53.0"
               layoutY="48.0"
               prefHeight="40.0"
               prefWidth="321.0"
               text="Tìm kiếm Giao dịch theo Số tiền">
            <font>
                <Font size="20.0" />
            </font>
        </Label>

        <!-- Search box -->
        <VBox layoutX="65.0"
              layoutY="136.0"
              prefHeight="200.0"
              prefWidth="283.0"
              spacing="10.0">
            <children>

                <Label text="Nhập khoảng số tiền" />

                <TextField fx:id="minAmountField"
                           promptText="Số tiền tối thiểu (ví dụ: 100)" />

                <TextField fx:id="maxAmountField"
                           promptText="Số tiền tối đa (ví dụ: 10000)" />

                <Text fx:id="errorLog"
                      fill="RED"
                      strokeType="OUTSIDE"
                      strokeWidth="0.0"
                      wrappingWidth="283.0" />

                <Button fx:id="searchButton"
                        alignment="CENTER"
                        onAction="#TimKiemGiaoDich"
                        prefHeight="30.0"
                        prefWidth="120.0"
                        text="Tìm kiếm">
                    <VBox.margin>
                        <Insets left="80.0" top="10.0" />
                    </VBox.margin>
                </Button>

            </children>
        </VBox>

        <!-- Result -->
        <VBox fx:id="resultVBox"
              layoutX="65.0"
              layoutY="380.0"
              prefHeight="250.0"
              prefWidth="283.0">
            <children>

                <Label prefHeight="22.0"
                       prefWidth="242.0"
                       text="Thông tin Giao dịch" />

                <Label fx:id="transactionIdLabel"
                       styleClass="label_in_Vbox_black"
                       text="Mã giao dịch:" />

                <Label fx:id="amountLabel"
                       styleClass="label_in_Vbox_black"
                       text="Số tiền:" />

                <Label fx:id="dateLabel"
                       styleClass="label_in_Vbox_black"
                       text="Ngày giao dịch:" />

                <Label fx:id="typeLabel"
                       styleClass="label_in_Vbox_black"
                       text="Loại giao dịch:" />

                <Label fx:id="descriptionLabel"
                       styleClass="label_in_Vbox_black"
                       text="Mô tả:" />

            </children>

            <padding>
                <Insets bottom="10.0"
                        left="10.0"
                        right="10.0"
                        top="10.0" />
            </padding>

            <styleClass>
                <String fx:value="VBox_thong_tin_dich" />
                <String fx:value="VBox" />
            </styleClass>
        </VBox>

        <!-- Return -->
        <Button fx:id="returnButton"
                layoutX="166.0"
                layoutY="640.0"
                mnemonicParsing="false"
                onAction="#QuayLai"
                text="Quay lại" />

    </children>
</AnchorPane>
